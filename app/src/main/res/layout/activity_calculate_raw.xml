<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateRaw"
    android:padding="14dp"
    android:background="#F6E6FC"
    >
    <TextView
        android:id="@+id/tvt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name : "
        android:padding="7dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/vala1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/tvt" />
    <Spinner
        android:id="@+id/spn"
        android:layout_below="@id/tvt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/tvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Aayadi : "
        android:padding="7dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/spn"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/vala"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:textSize="20dp"
        android:layout_below="@id/spn"
        android:layout_toEndOf="@+id/tvt" />

    <Button
        android:id="@+id/calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALULATE"
        android:layout_below="@id/tvt"
        android:onClick="calc"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="14dp"
        android:background="@drawable/background"
        />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:layout_below="@id/calc">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aaya"
                android:textSize="21dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/aaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:paddingHorizontal="20dp"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/aayaP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_gravity="fill"
                android:textSize="21dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vyaay"
                 
                android:textSize="21dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/vyaay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/vyaayp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#000"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                android:layout_gravity="fill"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoni"
                android:textSize="21dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/yoni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/yonip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:layout_gravity="fill"
                android:textColor="#000"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Var"
                 
                android:textSize="21dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/var"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/varp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#000"
                android:layout_gravity="fill"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nakshatra"
                android:textSize="21dp"
                 
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/nakshatra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/nakshatrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#000"
                android:layout_gravity="fill"
                android:layout_marginStart="14dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayul"
                android:textSize="21dp"
                 
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/ayul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginStart="14dp"
                />
            <TextView
                android:id="@+id/ayulp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:layout_gravity="fill"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginStart="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aamasa"
                android:textSize="21dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/aamasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#000"
                android:paddingHorizontal="20dp"
                android:textAlignment="center"
                android:layout_marginStart="14dp"
                />
            <TextView
                android:id="@+id/aamasap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginStart="14dp"
                android:layout_gravity="fill"
                />

        </GridLayout>

    </ScrollView>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="25dp"
        android:textSize="25dp"
        android:textAlignment="center"

        />

    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="21dp"
        android:text="Save as pdf"
        android:textSize="21dp"
        android:textStyle="bold"
        android:onClick="savepdf"
        android:background="@drawable/background"
        />


</RelativeLayout>