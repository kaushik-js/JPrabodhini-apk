<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E9CFD6"
    >
    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="7pt"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/autolink_val"
        android:textColor="#000000"
        />
    <ImageView
        android:layout_below="@id/web"
        android:layout_width="wrap_content"
        android:layout_height="436dp"
        android:layout_above="@+id/b1"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/jprobhodini"
        android:onClick="savelogin"
        />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:background="@drawable/background"
        android:onClick="cal"
        android:text="CALCULATE AAYADI"
        android:textSize="25dp"
        android:layout_above="@id/b3"
        />
    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background"
        android:onClick="pdf"
        android:text="CREATE PDF"
        android:textSize="25dp" />
    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/b2"
        android:layout_marginHorizontal="21dp"
        android:layout_marginVertical="28dp"
        android:background="@drawable/background"
        android:onClick="ftinch"
        android:text="foot/inch calucator"
        android:textSize="25dp" />
</RelativeLayout>